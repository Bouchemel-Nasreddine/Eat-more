<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_layout"
    android:layout_width="140dp"
    android:layout_height="105dp"
    android:layout_gravity="center_vertical"
    android:layout_marginHorizontal="1dp"
    android:background="@drawable/categorie_shadow">

    <ImageView
        android:id="@+id/category_picture"
        android:layout_width="27dp"
        android:layout_height="20dp"
        android:src="@drawable/burger_pink"
        app:layout_constraintBottom_toTopOf="@id/category_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/burger"
        android:textColor="@color/text_grey"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>